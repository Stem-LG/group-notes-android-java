<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="4dp"
    app:cardElevation="2dp"
    app:cardCornerRadius="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/noteTitleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/noteOptionsButton"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="?android:attr/textColorPrimary"/>

        <TextView
            android:id="@+id/noteContentText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/noteTitleText"
            android:layout_marginTop="8dp"
            android:layout_toStartOf="@id/noteOptionsButton"
            android:maxLines="3"
            android:ellipsize="end"
            android:textSize="14sp"
            android:textColor="?android:attr/textColorSecondary"/>

        <TextView
            android:id="@+id/noteAuthorText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/noteContentText"
            android:layout_marginTop="8dp"
            android:textSize="12sp"
            android:textStyle="italic"
            android:textColor="?android:attr/textColorSecondary"/>

        <ImageButton
            android:id="@+id/noteOptionsButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Note Options"
            android:padding="8dp"
            android:src="@drawable/ic_more_vert"/>

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView> 